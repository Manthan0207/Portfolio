<!-- Back Button -->
<div class="mb-4" style="position: relative; top: 5rem; margin-left : 5px;">
    <button onclick="window.history.back()" class="btn btn-dark btn-outline-secondary btn-sm">
        <i class="fa-solid fa-arrow-left me-2"></i>
    </button>
</div>


<div class="project-container" style="max-width: 1200px; margin: 2rem auto; padding: 0 1rem; margin-top : 5rem">
    <!-- Project Header -->
    <header class="project-header text-center mb-4">
        <h1 class="project-title display-5 fw-bold mb-2">{{project.title}}</h1>
        <p class="project-subtitle text-muted mb-3">{{project.shortDescription}}</p>
        <div class="d-flex justify-content-center gap-2 mb-3">
            {{#each project.techStack}}
            <span class="tech-badge badge bg-primary bg-opacity-10 text-primary py-2 px-3">{{this}}</span>
            {{/each}}
        </div>
        <a href="{{project.links.github}}" class="github-btn btn btn-dark btn-sm px-3" target="_blank">
            <i class="fab fa-github me-2"></i>View Code
        </a>
    </header>

    <!-- Project Description -->
    <section class="project-description mb-4">
        <h2 class="section-title h5 mb-3 text-primary">Project Overview</h2>
        <p class="description-text text-secondary mb-0">
            {{project.description}}
        </p>
    </section>


    <!-- Key Features -->
    <section class="key-features mb-4">
        <h2 class="h6 mb-2 text-muted fw-bold">KEY FEATURES</h2>
        <div class="d-flex flex-wrap gap-2">
            {{#each project.functionality}}
            <div class="feature-pill bg-light rounded-pill px-3 py-1 border">
                <i class="fas fa-check-circle text-success me-2" style="font-size: 0.8rem;"></i>
                <span class="text-secondary" style="font-size: 0.9rem;">{{this}}</span>
            </div>
            {{/each}}
        </div>
    </section>



    <!-- Image Gallery -->
    <section class="image-gallery mb-4">
        <h2 class="section-title h5 mb-3 text-primary">Gallery</h2>
        <div class="row g-3">
            {{#each project.images}}
            <div class="col-12">
                <div class="image-card card border-0 shadow-sm">
                    <img src="{{this.imageURL}}" class="card-img-top" alt="{{this.imageTitle}}"
                        style="height: 400px; object-fit: contain; background: #f8f9fa;">
                    <div class="card-body p-3">
                        <h3 class="image-title fw-medium mb-1">{{this.imageTitle}}</h3>
                        <p class="image-desc text-muted small mb-0">{{this.imageDesc}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </section>
</div>